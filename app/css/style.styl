.card-attr
	display: none

.card-attr--active
	display: block

.card-attr__text
	margin-bottom: 40px

.card-attr-row
	f()
	align-items: flex-end
	margin-bottom: 20px

.card-attr-title
	padding-right: 5px
	display table-cell
	white-space nowrap

.card-attr-row__cont
	display: table
	width: 55%
	align-items: flex-end

.card-attr-dot
	display table-cell
	width: 100%
	border-bottom .5px dashed gray

.card-attr-value
	width: 45%
	padding-left: 5px

.card-img-row
	margin-top: 20px
	padding: 0 20px
	display grid
	grid-template-columns: 1fr 1fr 1fr 1fr 1fr
	grid-gap 20px
	margin-bottom: 150px

.card-img__el
	bg-full()
	cp()
	position: relative
	height: 100px
	background-position: top center
	&:hover
		.card-img__filter
			opacity .3
.canlike--title
	@extend .type--lg
	up()
	text-align: center
	margin-bottom: 50px

.card-img__filter
	position: absolute
	top 0
	left 0
	tr(all)
	width: 100%
	height: 100%
	background: black
	z-index 5
	opacity 0
