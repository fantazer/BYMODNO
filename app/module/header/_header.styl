.head-search
	+below(1024px)
		width: auto
		order 1
		margin-left: 0
	width: 30%
	f()
	margin-left: auto
	margin-right: 5%
.head-search__wrap
	+below(1024px)
		flex(mid)
		position: static
	f()
	align-items: center
	width: 100%
	position: relative
	.icon--desct
		position: absolute
		right: 20px
	form
		+below(1024px)
			display: none
		width: 100%
	.icon
		size 20px
		cp()

.head-search__wrap--show
	form
		background: white
		position: absolute
		top 0px
		left 53px
		width:calc(100% - 53px)
		z-index 10
		height: calc(100% - 1px)
		flex(mid)
		padding: 0 10px

.head-search__input
	+below(1024px)
		border 0
	br(0)
	border 1px solid #d5d5d5
	width: 100%
	padding: 10px 45px 10px 20px
	background: white
	&:focus
		+below(768px)
			border-bottom 0
		border-bottom 1px solid #cecece
	&:active
		+below(768px)
			border-bottom 0
		border-bottom 1px solid #cecece

