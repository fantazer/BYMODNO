/*! block pagination*/
.pagination-wrap
	+below(1024px)
		flex(mid)
	+below(768px)
		margin-bottom: 30px
	f()
	justify-content: flex-end
.pagination
	+below(768px)
		margin-bottom: 0px
	+below(640px)
		min-width auto
		width: 100%
	min-width 360px
	flex(between)
	width: 40%
	margin-bottom: 100px
.pagination-arrow
	.icon
		size 20px
.pagination-cont
	flex(between)
	width: 70%
.pagination__el
	+below(768px)
		size 30px
	&:hover
		background: black
		color white
		border 1px solid black
	tr(all)
	flex(mid)
	round()
	size 40px
	border 1px solid $border-color
	line-height: 1
/*!block pagination end */