.subscribe
	bgi('bg-subscribe.png')
	bg-full()
	flex(mid)
	fl()
	padding: 70px 0
.subscribe__title
	@extend .type--lg
	font-weight 500
	color white
	text-align: center
	margin-bottom: 40px
	up()
	line-height:1.6
.subscribe-form
	input
		@extend .input
		br(0)
		tr(all)
		background: none
		border 1px solid #605e68
		padding: 20px 25px
		margin-right: 10px
		width: 400px
		color white
		&:focus
			border 1px solid white
.subscribe-form__row
	flex(between)
.subscribe-form__get
	@extend .btn
	tr(all)
	background: $red
	color white
	padding: 22px 25px
	&:hover
		background: lighten($red,5)
		color white

.footer-menu
	flex(mid)
	padding: 40px 0
	border-bottom:1px solid $border-color

.footer-menu__el
	font-weight: 600
	up()
	color black

.footer-menu__wrap
	flex(between)
	width: 40%

.footer-wrap
	padding: 40px 0

.footer
	f()
	justify-content: space-between

.footer__about
	width: 46%
	padding: 25px 0
	padding-right: 15%
	border-right:1px solid $border-color

.footer-title
	@extend .type--md
	up()
	font-weight 600
	color black
	margin-bottom: 30px

.footer-type
	color #898989
	margin-bottom: 30px

.footer-type--black
	color black

.footer-contact
	color black
.footer__soc
	width: 35%
	padding: 25px 0
	flex(mid)
	align-items: flex-start

.footer__soc-cont
	width: 70%

.soc-row
	f()
	.soc-el
		tr(all)
		&:last-child
			margin-right: 0
		&:hover
			background: black
			border 0px
			.icon
				fill white
		margin-right: 10px
		size 44px
		round()
		border 1px solid $border-color
		flex(mid)
		.icon
			tr(all)
			size 18px
			fill black
//.icon
.footer__pay
	width: 20%
	padding: 25px 0
.pay-row
	f()
	align-items: flex-start
	margin-bottom: 30px
	.pay-el
		margin-right: 10px
		.icon
			width: 65px
			height: 55px
		.icon.icon--master
			size 55px