					.card-attr(data-tab="tab-five")
						.card-attr-review
							.card-attr-review-cont
								- for (var j=0;j<4;j++)
									.card-review__el
										.card-review__head
											.card-review__info
												.card-review__name Валентина
												.card-review__stars
													- for (var i=0;i<4;i++)
														.card-review__stars-el.card-review__stars---true
